<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->
    <body style="background-color:rgb(134, 119, 119);">
    <div class="container">
      <div class="row">
        <div class="col-md-offset-1 col-md-10">
          <h3>Movies List </h3>
          <a href="/movies/add" class="btn btn-primary"><i class="fa fa-plus"></i> Add a movie</a>
          <br>
          <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
              <thead>
                <tr>
                  <th>Title</th>
                  <th class="text-center">Synopsis</th>
                  <th class="text-center">Year</th>
                  <th class="text-center">Director</th>
                  <th class="text-center">Genre</th>
                  
                  <th class="text-center"></th>
                </tr>
                </thead>
                <tbody>
                <!-- Template Row -->
                <% for (let count = 0; count < movies.length; count++) { %>
                <tr>
                  <td><%= movies[count].Title %></td>
                  <td class="text-center"><%= movies[count].Description %></td>
                  <td class="text-center"><%= movies[count].Price %></td>
                  <td class="text-center"><%= movies[count].Author %></td>
                  <td class="text-center"><%= movies[count].Genre %></td>
                  


                  <td class="text-center">
                    <a href="movies/<%= movies[count]._id %>"+count class="btn btn-primary"><i class="fa fa-plus"></i> Edit entry</a>
                  </td>

                  <td class="text-center">
                    <a href="movies/delete/<%= movies[count]._id %>" class="btn btn-primary"><i class="fa fa-check-square-o"></i> Delete entry</a>
                  </td>
                </tr>
                <% } %> 
              </tbody>
            </table>
          </div>
           <div class="col-md-offset-1 col-md-10 text-center">
            <ul class="pagination pagination-lg pager" id="myPager"></ul>
          </div>
        </div>
      </div>
    </div>
    </body>

